<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Consultant list</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
      </li>
      <li>
        <a>Catalogs</a>
      </li>
      <li class="active">
        <strong>Consultants</strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          &nbsp;<a href="<%= url_for new_consultant_path %>">
          <button class="btn btn-outline btn-warning btn-rounded" type="button"><i class="fa fa-plus"></i>&nbsp;New consultant</button>
        </a>
          <div class="ibox-tools">
            Total records: <%= @consultants.count %>
            <a >
              <i class="fa fa-bars"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
            <tr>
              <th>Code</th>
              <th>Full name</th>
              <th>Email</th>
              <th>Phone number</th>
              <th>Role</th>
              <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Acciones&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            <% @consultants.each do |consultant| %>
              <tr>
                <td><%=consultant.code %></td>
                <td><%=consultant.fullName%></td>
                <td><%=consultant.email%></td>
                <td><%=consultant.phoneNumber%></td>
                <td><%=consultant.role%></td>
                <td>
                  <%= link_to consultant, class: 'btn btn-success btn-circle', title: 'Detail' do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <%= link_to edit_consultant_path(consultant), class: 'btn btn-primary btn-circle', title: 'Edit' do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= link_to 'D', consultant, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-circle', title: "Delete"%>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>


</div>

<% content_for :javascript do %>
  <script type="text/javascript">
      $(function() {
          $('.dataTables-example').dataTable({
              "order": [[ 1, "desc" ]],
              "dom": 'T<"clear">lfrtip',
              "tableTools": {
                  "sSwfPath": "../assets/dataTables/swf/copy_csv_xls_pdf.swf"
              }
          });
      });
  </script>
<% end %>


