
<div class="wrapper wrapper-content animated fadeInRight">

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Form<small> that show the customer data.</small></h5>

        </div>
        <div class="ibox-content">

          <div class="form-group">
            <div class="form-group">
              <h4>Code:</h4>
              <div class="col-sm-5">
                <%= @customer.code %>
              </div><br>

              <h4>Full name:</h4>
              <div class="col-sm-5">
                <%= @customer.fullName%>
              </div><br>

              <h4>Email:</h4>
              <div class="col-sm-5">
                <%= @customer.email%>
              </div><br>

              <h4>Phone:</h4>
              <div class="col-sm-5">
                <%= @customer.phoneNumber%>
              </div><br>
              <h4>Address:</h4>
              <div class="col-sm-5">
                <%= @customer.address%>
              </div><br>
            </div>
            <br>
            <div class="hr-line-dashed"></div>
          </div>

          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <a href="<%= url_for customers_path %>">
                <button class="btn btn-outline btn-danger btn-rounded" type="button"><i class="fa fa-list-ol"></i>&nbsp;Customers</button>
              </a>
              <a href="<%= url_for edit_customer_path(@customer) %>">
                <button class="btn btn-outline btn-success btn-rounded" type="button"><i class="fa fa-pencil"></i>&nbsp;Edit</button>
              </a>
              <a href="<%= url_for new_customer_path %>">
                <button class="btn btn-outline btn-warning btn-rounded" type="button"><i class="fa fa-plus"></i>&nbsp;New</button>
              </a>
            </div>
          </div>
          <br><br>




        </div>
      </div>
    </div>
  </div>
</div>

