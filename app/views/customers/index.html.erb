<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Customer list</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
      </li>
      <li>
        <a>Catalogs</a>
      </li>
      <li class="active">
        <strong>Customers</strong>
      </li>
    </ol>
  </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          &nbsp;<a href="<%= url_for new_customer_path %>">
          <button class="btn btn-outline btn-warning btn-rounded" type="button"><i class="fa fa-plus"></i>&nbsp;New Customer</button>
        </a>

          <div class="ibox-tools">
            Total records: <%= @customers.count %>
            <a >
              <i class="fa fa-bars"></i>
            </a>
          </div>

        </div>
        <div class="ibox-content">

          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
            <tr>
              <th>Code</th>
              <th>Full name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Address</th>
              <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Acciones&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%=customer.code %></td>
                <td><%=customer.fullName%></td>
                <td><%=customer.email%></td>
                <td><%=customer.phoneNumber%></td>
                <td><%=customer.address%></td>
                <td>
                  <%= link_to customer, class: 'btn btn-success btn-circle', title: 'Detail' do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <%= link_to edit_customer_path(customer), class: 'btn btn-primary btn-circle', title: 'Edita' do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= link_to 'D', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-circle', title: "Delete"%>
                </td>
              </tr>
            <% end %>


            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>


</div>

<% content_for :javascript do %>
  <script type="text/javascript">
      $(function() {
          $('.dataTables-example').dataTable({
              "order": [[ 1, "desc" ]],
              "dom": 'T<"clear">lfrtip',
              "tableTools": {
                  "sSwfPath": "../assets/dataTables/swf/copy_csv_xls_pdf.swf"
              }
          });
      });
  </script>
<% end %>


